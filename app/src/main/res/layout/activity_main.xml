<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#486E5D"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imgMain"
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/teknoloji"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <EditText
        android:id="@+id/edittxtMail"
        android:layout_width="291dp"
        android:layout_height="62dp"
        android:background="@drawable/edittext_borders"
        android:drawableStart="@drawable/ic_email"
        android:ems="10"
        android:hint="@string/editHintedMail"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446" />

    <EditText
        android:id="@+id/edittxtPassword"
        android:layout_width="291dp"
        android:layout_height="62dp"
        android:background="@drawable/edittext_borders"
        android:drawableStart="@drawable/ic_baseline"
        android:ems="10"
        android:hint="@string/editHintedPassword"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:text="@string/btnLogin"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittxtPassword"
        app:layout_constraintVertical_bias="0.326"
        app:strokeColor="#714F4F" />
</androidx.constraintlayout.widget.ConstraintLayout>